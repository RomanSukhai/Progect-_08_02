<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "ua.lviv.lgs.hbm.xml.Item" table = "cart">
      <id name = "id" type = "int" column = "id">
         <generator class="increment"/>
      </id>
      
      
      <property name = "total" column = "total" type = "string"/>
      <property name = "name" column = "name" type = "string"/>
      
      
      <set name="Cart" table="item_cart" inverse="true" lazy="true" fetch="select" cascade="all">
      <key>
      <column name="item-id" not-null="true"></column>
      </key>
      <many-to-many entity-name="ua.lviv.lgs.hbm.xml.Cart">
      	<column name="cart_id"></column>
      </many-to-many>
      
      
      </set>
      
   </class>
</hibernate-mapping>